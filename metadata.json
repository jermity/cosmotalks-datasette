{
  "title": "Cosmology Researcher Talks for Others in the Field",
  "license": "CC Attribution 1.0 License",
  "license_url": "https://creativecommons.org/publicdomain/zero/1.0/",
  "about": "CosmoTalks app and data",
  "about_url": "/about",
  "databases": {
   "cosmotalks": {
     "tables": {
       "talks": {
        "sort_desc": "talkdate",
        "size": 50,
       },
       "series": {
        "sort": "series",
        "label_column": "series",
       },
       "ytid": {
        "hidden": true
       }
     },
     "queries": {
       "#Talks_by_Series": {
         "sql": "select s.series, count(talk) as '# talks', s.talks_list, s.website from talks t inner join series s on t.series=s.id group by s.series order by s.series;"
        }
     },
   },
  },
  "plugins": {
    "datasette-render-markdown": {
      "columns": ["talk","talks_list","website"],
      "path": "plugins/datasette_render_markdown/",
      "extra_tags": ["img","br","ul","ol","li"],
    },
    "datasette-template-sql": {
      "path": "plugins/datasette_template_sql/"
    }
  },
}
